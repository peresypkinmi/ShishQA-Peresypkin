#/!bin/bash

options=(      # Задает массив из пяти элементов, при чем, каждый элемент массива 
	1       # может быть как числом, так и символом
	2
	3
	4
	5
       
)
echo 'Please choose an option'# выводит на экран сообщение:Please choose an option
select input in "${options[@]}"; #создает меню из списка элементов массива options
 do
	case "$input" in            #оператор case используется для выполнения разных 
                                    #команд при разных вариантах ввода значений
		"${options[0]}")  # При вводе нулевого элемента массива options(в данном случае это значение "1")
			ls         # выполнится команда ls - покажет список файлов в текущей директории  
			;;
		"${options[1]}")   # При вводе первого элемента массива options(в данном случае это значение "2")
			date $'+Time: %T\nDate: %D' # на экране будет показано текущее время и дата
			;;
		"${options[2]}")# При вводе второго элемента массива options(в данном случае это значение "3")
			read -p 'What file do you wish to check? ' finput # будет написано предложение - What file do you wish to check?
                                                                           # и задается переменная finput
			if [[ -d $finput ]]; then    #Внтри одного из вариантов оператора case используется оператор if-следующим образом :
                                                     #Точного определения работы ключа -d я не нашел, но судя по поведению скрипта он работает так-
                                                     # -если в переменной записать имя папки, которая находится в текущей директории, то 
				format='%s is a directory.\n' на экране будет надпись - is a directory
			elif [[ -f $finput ]]; then   # иначе если в переменной $finput с ключем -f введем имя файла существующего
                                                      # в текуцщей директории, то на экране будет сообщение-
				format='%s is a file.\n' # is a file
			else
				format='%s does not exist.\n'# при всех других вариантах содержания переменной-$finput
                                                             # на экране сообщение- does not exist
			fi
			printf "$format" "$finput"                          
			;;
		"${options[3]}") # При вводе третьего элемента массива options(в данном случае это значение "4")
			read -p 'Please enter filename: ' binput # на экране сообщение Please enter filename:
                                                                 # и задается переменная binput
			cp "$binput"{,.bak} # выполнится команда cp(копирование файла) который введен как переменная, с присвоением 
                                            # этому файлу расширения .bak файл будет сохранен в текущей директории                             
			;;
		"${options[4]}") # При вводе четвертого элемента массива options(в данном случае это значение "5")
			break    # выполнится команда выхода из цикла программы
			;;
		*)
			echo 'Not a valid option.' #при вводе любых других значений появится сообщение
                                                    #Not a valid option.
			;;
	esac #завершающий элемент оператора сase
done #завершающий элемент конструкции select
скрипт работает.